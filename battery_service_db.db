#ifndef __BATTERY_SERVICE_DB__
#define __BATTERY_SERVICE_DB__

#include "hid_uuids.h" 
#include "battery_uuids.h"

/* For service details, refer http://developer.bluetooth.org/gatt/services/
 * Pages/ServiceViewer.aspx?u=org.bluetooth.service.battery_service.xml.
 */

/* Primary service declaration of Battery service. */
primary_service {
    uuid : BATTERY_SERVICE_UUID,
    name : "BATTERY_SERVICE", /* Name will be used in handle name macro */

    /* Battery level characteristic */

    /* Battery Level characteristic supports IRQ flag, thereby reads and writes
     * on characteristic value are handled by application. Read and write access
     * to battery level characteristic value requires encryption to be enabled.
     * If read and write operation is performed without encrypting the link, ATT
     * will report 'Insufficient Authentication'.
     */
    
    characteristic {
        uuid : BATTERY_LEVEL_UUID,
        name : "BATT_LEVEL",
        flags : [FLAG_IRQ, FLAG_ENCR_R],
        properties : [read, notify],
        value : 0x00,
        
        client_config {
            flags : [FLAG_IRQ, FLAG_ENCR_W],
            name : "BATT_LEVEL_C_CFG"
        },
        
        /* External report reference for battery level */            
        raw {
            value: [0xe002, HID_REPORT_REFERENCE_UUID, 0x0002, 0x0201]
        }
    }      
},
#endif /* __BATTERY_SERVICE_DB__ */