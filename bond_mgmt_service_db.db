#ifndef __BOND_MGMT_SERVICE_DB__
#define __BOND_MGMT_SERVICE_DB__

#include "bond_mgmt_uuids.h"

/* Primary service declaration of Bond Management service. */
primary_service {
    uuid : BOND_MGMT_SERVICE_UUID,
    name : "BOND_MGMT_SERVICE", /* Name will be used in handle name macro */

    /* Bond Management Control Point characteristic */    
    characteristic {
        uuid : BOND_MGMT_CONTROL_POINT_UUID,
        name : "BOND_MGMT_CONTROL_POINT",
        flags : FLAG_IRQ,
        properties : write,
        value : 0x00        
    },

    /* Bond Management Feature characteristic */
    characteristic {
        uuid : BOND_MGMT_FEATURE_UUID,
        name : "BOND_MGMT_FEATURE",
        flags : FLAG_IRQ,
        properties : read,
        value : 0x00        
    }
},
#endif /* __BOND_MGMT_SERVICE_DB__ */
